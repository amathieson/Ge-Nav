		<splash src="www/res/screen/ios/Default~iphone.png" width="320" height="480" /> 
	</platform>
	<platform name="android">
		<icon src="www/res/icon/android/mipmap-ldpi/ic_launcher.png" qualifier="ldpi" />
		<icon src="www/res/icon/android/mipmap-mdpi/ic_launcher.png" qualifier="mdpi" />
