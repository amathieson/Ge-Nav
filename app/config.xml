		<splash src="www/res/screen/ios/Default-736h.png" width="1242" height="2208" /> 
		<splash src="www/res/screen/ios/Default@3x~iphone~anycom.png" width="2208" height="1242" /> 
		<splash src="www/res/screen/ios/Default@2x~iphone~comany.png" width="750" height="1334" /> 
		<splash src="www/res/screen/ios/Default@2x~iphone~comcom.png" width="1334" height="750" /> 
		<splash src="www/res/screen/ios/Default-568h@2x~iphone.png" width="640" height="1136" /> 
